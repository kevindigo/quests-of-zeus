{
  "name": "quests-of-zeus-pwa",
  "version": "0.1.0",
  "description": "Quests of Zeus, based on the Oracle of Delphi boardgame",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read src/main.ts",
    "start": "deno run --allow-net --allow-read src/main.ts",
    "build": "deno run -A build.ts",
    "icons": "deno run -A create-simple-icons.ts",
    "test": "deno test",
    "test:no-server": "deno test  tests/",
    "test:fast": "deno test --no-run",
    "test:single": "deno test --filter",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "manual-sea-test": "deno run --allow-read manual_test_sea_to_shallows.ts"
  },
  "exports": "./src/main.ts",
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@oak/oak": "jsr:@oak/oak@^12.6.1",
    "esbuild": "https://deno.land/x/esbuild@v0.21.4/mod.js",
    "esbuild-deno-loader": "https://deno.land/x/esbuild_deno_loader@0.9.0/mod.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "quotes": ["error", "single"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "useTabs": false,
    "singleQuote": true
  }
}
