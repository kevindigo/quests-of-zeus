{
  "name": "oracle-of-delphi-pwa",
  "version": "0.1.0",
  "description": "A PWA implementation of the Oracle of Delphi boardgame with AI opponents",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --no-check src/main.ts",
    "start": "deno run --allow-net --allow-read --no-check src/main.ts",
    "build": "deno run -A build.ts",
    "icons": "deno run -A create-simple-icons.ts",
    "test": "deno test --allow-read --no-check",
    "test:no-server": "deno test --allow-read --no-check tests/",
    "test:fast": "deno test --allow-read --no-run --no-check tests/",
    "test:single": "deno test --allow-read --filter --no-check",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "manual-sea-test": "deno run --allow-read manual_test_sea_to_shallows.ts"
  },
  "exports": "./src/main.ts",
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@oak/oak": "jsr:@oak/oak@^12.6.1",
    "esbuild": "https://deno.land/x/esbuild@v0.21.4/mod.js",
    "esbuild-deno-loader": "https://deno.land/x/esbuild_deno_loader@0.9.0/mod.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"]
  }
}